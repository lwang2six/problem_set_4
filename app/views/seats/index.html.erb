<h1 class="center">Seating Chart</h1>
<% if @seats %>
<div class="seat" id="seat">
Front of class
</div>
<table class="seat">
  <% for i in 0..3 %>
    <tr> 
      <% for j in 0..7%>
        <% if j == 4%><td></td><% end %>
        <% if not @user.nil? %>
          <% if @seats[i*7+j+i].user.nil? %>
            <td><%= link_to "Empty Seat", upseat_url(@seats[i*7+j+i], :format => :js), :confirm => 'Are you Sure?', :remote => true, :id => "seat_#{i*7+j+i+1}" %> </td>
          <%else %>
            <td><%= link_to "#{@seats[i*7+j+i].user.email}", @seats[i*7+j+i], :id => "seat_#{i*7+j+i+1}" %> </td>
          <% end %>
        <% else %>
          <% if @seats[i*7+j+i].user.nil? %>
            <td><%= link_to "Empty Seat", @seats[i*7+j+i], :id => "seat_#{i*7+j+i+1}" %> </td>
          <%else %>
            <td><%= link_to "#{@seats[i*7+j+i].user.email}", @seats[i*7+j+i], :id => "seat_#{i*7+j+i+1}" %> </td>
          <% end %>
        <% end %>
      <% end %>
    </tr>
  <% end %>
</table>
<div class="seat">
Back of class
</div>
<% end %>
<br />

